{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {}
  },
  "extends": [
    "standard"
  ],
  "plugins": [
    "import",
    "json",
    "node",
    "promise",
    "standard"
  ],
  "env": {
    "browser" : true,
    "mocha"   : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false,
    "expect" : false,
    "should" : false,
    "sinon"  : false,
    "enzyme" : false,
    "windows": false,
    "document": false,
    "myLogs": false,
    "gapi": false,
    "$": false
  },
  "rules": {
    "semi"                 : [1, "always"],
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 200, 2],
    "object-curly-spacing" : [2, "always"]
  }
}
